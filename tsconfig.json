{
    "compilerOptions": {
      "target": "es2020",
      "strict": true,
      "rootDir": "src",
      "outDir": "dist",
      "preserveConstEnums": true,
      "noEmit": false,
      "sourceMap": false,
      "module":"commonjs",
      "moduleResolution":"node",
      "esModuleInterop": true, 
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true, 
      "isolatedModules": true, 
      "resolveJsonModule": true
    },
    "exclude": ["node_modules", "**/*.test.ts"],
    "include": ["src/"]
  }